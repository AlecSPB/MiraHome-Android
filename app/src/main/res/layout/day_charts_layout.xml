<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Heart Rate:70bmp"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_dimen_28pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Heartbeat pause 0"
            android:textColor="@color/colorWhite50"
            android:textSize="@dimen/text_dimen_24pt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:scrollbars="none">

                <com.mooring.mh.views.ChartView.MyChartView
                    android:id="@+id/myChartView1"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    chart:chart_x="24"
                    chart:chart_y="10"
                    chart:line_color="@color/colorOrange" />
            </HorizontalScrollView>

            <com.mooring.mh.views.ChartView.YAxisView
                android:id="@+id/allChart1"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                chart:chart_y="10" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Breathing Rate:18/min"
            android:textColor="@color/colorPurple"
            android:textSize="@dimen/text_dimen_28pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Apnea 2 11s"
            android:textColor="@color/colorWhite50"
            android:textSize="@dimen/text_dimen_24pt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:scrollbars="none">

                <com.mooring.mh.views.ChartView.MyChartView
                    android:id="@+id/myChartView2"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    chart:chart_x="24"
                    chart:chart_y="10"
                    chart:line_color="@color/colorPurple" />
            </HorizontalScrollView>

            <com.mooring.mh.views.ChartView.YAxisView
                android:id="@+id/allChart2"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                chart:chart_y="10" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Body movement:8"
            android:textColor="@android:color/holo_green_light"
            android:textSize="@dimen/text_dimen_28pt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:scrollbars="none">

                <com.mooring.mh.views.ChartView.MyChartView
                    android:id="@+id/myChartView3"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    chart:chart_x="24"
                    chart:chart_y="10"
                    chart:line_color="@android:color/holo_green_light" />
            </HorizontalScrollView>

            <com.mooring.mh.views.ChartView.YAxisView
                android:id="@+id/allChart3"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                chart:chart_y="10" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>