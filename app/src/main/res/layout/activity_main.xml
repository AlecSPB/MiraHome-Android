<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--主布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/title_layout"
                layout="@layout/common_title_layout" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgView_weather"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@mipmap/btn_weather_select" />

            <ImageView
                android:id="@+id/imgView_control"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@mipmap/btn_control_normal" />

            <ImageView
                android:id="@+id/imgView_parameter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@mipmap/btn_parameter_normal" />

            <ImageView
                android:id="@+id/imgView_timing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@mipmap/btn_timing_normal" />

        </LinearLayout>
    </LinearLayout>

    <!--侧滑菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorMainBg">

        <include
            android:id="@+id/activity_menu"
            layout="@layout/sliding_activity_menu" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
