<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent_2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgView_act_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bg_act_back" />

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Heart rate"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_dimen_34pt" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgView_detail_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="125dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/tv_detail_param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:text="88"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_dimen_168pt" />

    <TextView
        android:id="@+id/tv_detail_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="bmp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_dimen_18pt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_logo_mirahome" />
</LinearLayout>