<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBg"
    android:orientation="vertical">

    <include layout="@layout/activity_common_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/head_gap_body" />

    <com.mooring.mh.views.CircleProgress.DryingCircleView
        android:id="@+id/drying"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp" />

    <TextView
        android:id="@+id/tv_drying_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="00:00:00"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <com.mooring.mh.views.CustomToggle
        android:id="@+id/toggle_drying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

</LinearLayout>