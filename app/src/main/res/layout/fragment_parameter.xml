<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBg"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-56dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/img_no_device_connect" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_arrow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/img_device_not_connect" />

        <TextView
            style="@style/text_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击连接设备" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_heart_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_heart_rate"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_heart_rate" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart rate"
                        android:textSize="@dimen/text_dimen_22" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_heart_rate"
                            style="@style/text_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="71"
                            android:textSize="@dimen/text_total_point" />

                        <TextView
                            style="@style/text_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BPM"
                            android:textSize="@dimen/text_dimen_16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_breathing_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_breathing_rate"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_breathing_rate" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breathing rate"
                        android:textSize="@dimen/text_dimen_22" />

                    <TextView
                        android:id="@+id/tv_breathing_rate"
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21"
                        android:textSize="@dimen/text_total_point" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_body_movement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_body_movement"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_body_movement" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body movement"
                        android:textSize="@dimen/text_dimen_22" />

                    <TextView
                        android:id="@+id/tv_body_movement"
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:textSize="@dimen/text_total_point" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_humidity"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_humidity_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textSize="@dimen/text_dimen_22" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_humidity"
                            style="@style/text_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="38"
                            android:textSize="@dimen/text_total_point" />

                        <TextView
                            style="@style/text_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="@dimen/text_dimen_16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_temperature"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_temperature" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:textSize="@dimen/text_dimen_22" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_temperature"
                            style="@style/text_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textSize="@dimen/text_total_point" />

                        <TextView
                            style="@style/text_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="@dimen/text_dimen_16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_bed_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_bed_temperature"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_bed_temperature" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bed Temperature"
                        android:textSize="@dimen/text_dimen_22" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_bed_temperature"
                            style="@style/text_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="31"
                            android:textSize="@dimen/text_total_point" />

                        <TextView
                            style="@style/text_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="@dimen/text_dimen_16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_light"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Light"
                        android:textSize="@dimen/text_dimen_22" />

                    <TextView
                        android:id="@+id/tv_light"
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="low"
                        android:textSize="@dimen/text_total_point" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_noise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_noise"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_noise" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noise"
                        android:textSize="@dimen/text_dimen_22" />

                    <TextView
                        android:id="@+id/tv_noise"
                        style="@style/text_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="low"
                        android:textSize="@dimen/text_total_point" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>