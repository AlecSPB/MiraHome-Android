<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:id="@+id/other_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPurple">

        <TextView
            android:id="@+id/select_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/hint_weight"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_dimen_34pt" />

        <ImageView
            android:id="@+id/select_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/bg_dialog_confirm" />
    </FrameLayout>

    <com.mooring.mh.views.WheelPicker.widget.WheelWeightSelectPicker
        android:id="@+id/wheel_data_weight"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/color_day_select" />

</LinearLayout>