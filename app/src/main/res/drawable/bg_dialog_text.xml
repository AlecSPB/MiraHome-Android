    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval" android:useLevel="false">
            <solid android:color="@color/colorPurpleDeep" />
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>
    <!--正常的效果-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval" android:useLevel="false">
            <solid android:color="@color/colorPurple" />
            <size android:width="60dp" android:height="60dp" />
        </shape>
    </item>
</selector>