<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义圆形自加载progress-->
    <declare-styleable name="AutoProgress">
        <attr name="pre_textColor" format="color" />
        <attr name="pre_unFinishColor" format="color" />
        <attr name="pre_finishColor" format="color" />
    </declare-styleable>

    <!--自定义圆形图片-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--WheelPicker 滚动选择器-->
    <declare-styleable name="AbstractWheelPicker">
        <attr name="wheel_data" format="reference" />
        <attr name="wheel_style" format="enum">
            <enum name="straight" value="0" />
            <enum name="curved" value="1" />
        </attr>
        <attr name="wheel_direction" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="wheel_item_index" format="integer" />
        <attr name="wheel_item_same_size" format="boolean" />
        <attr name="wheel_item_count" format="integer" />
        <attr name="wheel_item_space" format="dimension" />
        <attr name="wheel_text_size" format="dimension" />
        <attr name="wheel_text_color" format="color" />
        <attr name="wheel_text_color_current" format="color" />
    </declare-styleable>

    <!--自定义圆形可缩放图片-->
    <declare-styleable name="ZoomCircleView">
        <attr name="img_src" format="reference" />
        <attr name="img_zoom_out" format="boolean" />
    </declare-styleable>

    <!--自定义ChartView-->
    <declare-styleable name="MyChartView">
        <attr name="chart_x" format="integer" />
        <attr name="chart_y" format="integer" />
        <attr name="chart_area" format="boolean" />
        <attr name="chart_circle" format="boolean" />
        <attr name="line_color" format="color" />
        <attr name="area_color" format="color" />
        <attr name="y_location" format="integer" />
    </declare-styleable>

    <!-- 自定义...加载效果 -->
    <declare-styleable name="WaitingDots">
        <attr name="period" format="integer" />
        <attr name="jumpHeight" format="integer" />
        <attr name="autoPlay" format="boolean" />
    </declare-styleable>

</resources>